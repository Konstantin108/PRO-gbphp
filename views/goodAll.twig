{% extends 'layouts/main.twig' %}
{% block title %}Список товаров{% endblock %}
{% block content %}
<a href="?c=good&a=updateGood&id={{ good.id }}">Добавить новый товар</a>
{% for good in goods %}
    <h2>{{ good.name }}</h2>
    <h3>{{ good.price }}р.</h3>
    <a href="?c=good&a=one&id={{ good.id }}">подробнее</a>
    <hr>
{% else %}
    <h3 style="color: red">Список пуст</h3>
{% endfor %}
{% endblock %}